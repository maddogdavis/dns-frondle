#!/bin/sh -euf

. _imports

alias echo="/bin/echo"

[ $# == 0 ] && usage "<git-repo> dns-server [dns-server ...]"

me=`basename $0`
repo=$1
shift 1
servers=$*

echo "commencing update to $# servers"

# ping check all servers
for i in ${servers}
do
    ssh_ping ${i}
done

init_tmp
stamp

# load from git HEAD
stamp=${__}
load="${stamp}"
clone="${tmp}/${load}"
git_clone ${repo} ${clone}

# rename to incorporate git commit id
reponame=${__}
git_head_id ${clone}/${reponame}
gitcom=${__}
ver="${stamp}__${gitcom}__${me}"
repoloc="${tmp}/${ver}/${reponame}"
mv ${clone} ${tmp}/${ver}
clone="${tmp}/${ver}"

# determine slaves or fail early
for i in ${servers}
do
    dns_slaves ${repoloc} ${i}
done

# upload git repo to all servers
for i in ${servers}
do
    frondle_env
    echo "syncing to ${i}..."
    ssh ${i} 'mkdir -p '${DNSHOME}'/snaps'
    scp -rp -q ${clone} ${i}:${SNAPS}
done

# switch live link on all servers
for i in ${servers}
do
    frondle_env
    echo "linking live to ${ver}"
    ssh ${i} 'rm -f '${DNSHOME}'/live && ln -s '${SNAPS}'/'${ver} ${DNSHOME}'/live'
done

# poke named on each server.
for i in ${servers}
do
    echo -n "${i} "
    ssh ${i} 'rndc reload'
    dns_slaves ${repoloc} ${i}
    slaves=${__}
    for j in ${slaves}
    do
        echo -n "${i} slave ${j} "
        ssh ${i} 'rndc reload '${j}''
    done
done
