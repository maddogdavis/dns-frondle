#!/bin/sh -euf

# TODO: ensure RHOME,DNSHOME,SNAPS exist

. _imports

alias echo="/bin/echo"

[ $# == 0 ] && usage "<git-repo> dns-server [dns-server ...]"

me=`basename $0`
repo_url=$1
shift 1
servers=$*

init_tmp

echo "commencing update to $# servers"

# ping check all servers
for i in ${servers}
do
    ssh_ping ${i}
done

# load from git
git_stamp ${repo_url}; 
repo_loc=${__}
ver=`echo ${repo_loc} | sed "s+^${tmp}/\(.*\)/.*$+\1+"`

# determine slaves or fail early
for i in ${servers}
do
    dns_get_slaves ${repo_loc} ${i}
    echo slaves ${i} ${__}
done

# upload git repo to all servers
for i in ${servers}
do
    echo "syncing to ${i}..."
    frondle_env ${i}
    scp -rp -q ${tmp}/${ver} ${i}:${__frondle_snaps}
done

# switch live link on all servers
for i in ${servers}
do
    echo "linking live to ${ver}"
    frondle_env ${i}
    ssh ${i} 'rm -f '${__frondle_home}'/live && ln -s '${__frondle_snaps}'/'${ver} ${__frondle_home}'/live'
done

fail "WORK TO BE DONE..."

# poke named on each server.
for i in ${servers}
do
    echo -n "${i} "
    ssh ${i} 'rndc reload'
    dns_slaves ${repoloc} ${i}
    slaves=${__}
    for j in ${slaves}
    do
        echo -n "${i} slave ${j} "
        ssh ${i} 'rndc reload '${j}''
    done
done
